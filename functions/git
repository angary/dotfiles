#!/bin/zsh

# Fuzzy git checkout
gch() {
	git checkout "${1:-$(git branch --all | fzf | awk '{print $1}')}"
}

# Fuzzy git rebase for branches
grb() {
	git rebase "${1:-$(git branch --all | fzf | awk '{print $1}')}"
}

# Reset with remote
grr() {
	git fetch origin "$1" && git reset --hard origin/$1
}
